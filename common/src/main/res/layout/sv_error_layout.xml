<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/sv_error_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_cacheComposition="true"
        android:layout_marginTop="90dp"
        app:lottie_fileName="lottie/net_error2.json"
        app:lottie_loop="true"
        app:lottie_repeatMode="restart" />

    <TextView
        android:id="@+id/sv_error_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv_error_icon"
        android:layout_centerHorizontal="true"
        android:text="@string/text_error"
        android:textColor="@color/color_tip"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/sv_error_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv_error_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/retry_background"
        android:paddingLeft="15dp"
        android:paddingTop="3dp"
        android:paddingRight="15dp"
        android:visibility="gone"
        android:paddingBottom="3dp"
        android:text="@string/text_retry"
        android:textColor="@color/color_retry"
        android:textSize="14sp" />

</RelativeLayout>